<div>
  <%= form_for [@recipe = Recipe.new] do |f| %>


      <hr>
      <div class="form-group">
    <p>  <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Title" %></p>

    <p>  <%= f.label :description %>
      <%= f.text_field :description, placeholder: "Description" %> </p>

      <div class="actions">
        <%= f.submit "add recipe", class: "btn btn-success" %>
      </div>
  <% end %>
</div>
